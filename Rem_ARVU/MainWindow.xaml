<Window x:Class="Rem_ARVU.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Abstract for .NET Client Application - Master-Detail View" 
        Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top row: Login/Logout buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Content="LogOut" Command="{Binding LogoutCommand}" Margin="5"/>
            <Button Content="LogIn" Command="{Binding LogInCommand}" Margin="5"/>
        </StackPanel>

        <!-- Master-Detail layout -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left side: Master tables -->
            <TabControl Grid.Column="0">
                <!-- Product Groups Tab -->
                <TabItem Header="Product Groups">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                            <Button Content="Create" Command="{Binding CreateProductGroupCommand}" Margin="2"/>
                            <Button Content="Update" Command="{Binding UpdateProductGroupCommand}" Margin="2"/>
                            <Button Content="Delete" Command="{Binding DeleteProductGroupCommand}" Margin="2"/>
                            <Button Content="Refresh" Command="{Binding RefreshProductGroupsCommand}" Margin="2"/>
                        </StackPanel>

                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding ProductGroups}" 
                                  SelectedItem="{Binding SelectedProductGroup}"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  Margin="5"
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Parent ID" Binding="{Binding Parent}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- Vendors Tab -->
                <TabItem Header="Vendors">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                            <Button Content="Create" Command="{Binding CreateVendorCommand}" Margin="2"/>
                            <Button Content="Update" Command="{Binding UpdateVendorCommand}" Margin="2"/>
                            <Button Content="Delete" Command="{Binding DeleteVendorCommand}" Margin="2"/>
                            <Button Content="Refresh" Command="{Binding RefreshVendorsCommand}" Margin="2"/>
                        </StackPanel>

                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding Vendors}" 
                                  SelectedItem="{Binding SelectedVendor}"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  Margin="5"
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="100"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Website" Binding="{Binding VendorSite}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch" 
                         Background="LightGray"/>

            <!-- Right side: Detail view -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Detail header -->
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
                    <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Related Products"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMasterType}" Value="Vendor">
                                        <Setter Property="Text" Value="Products by Selected Vendor"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedMasterType}" Value="ProductGroup">
                                        <Setter Property="Text" Value="Products in Selected Group"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Button Content="Create Product" Command="{Binding CreateProductCommand}" Margin="2"/>
                        <Button Content="Update Product" Command="{Binding UpdateProductCommand}" Margin="2"/>
                        <Button Content="Delete Product" Command="{Binding DeleteProductCommand}" Margin="2"/>
                        <Button Content="Refresh Products" Command="{Binding RefreshProductsCommand}" Margin="2"/>
                    </StackPanel>
                </StackPanel>

                <!-- Products grid (detail) -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding FilteredProducts}" 
                          SelectedItem="{Binding SelectedProduct}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          Margin="5"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="100"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Group" Binding="{Binding Group}" Width="70"/>
                        <DataGridTextColumn Header="Vendor" Binding="{Binding Vendor}" Width="70"/>
                        <DataGridCheckBoxColumn Header="Obsolete" Binding="{Binding Obsolete}" Width="70"/>
                        <DataGridTextColumn Header="Min Amt" Binding="{Binding MinAmount}" Width="70"/>
                        <DataGridTextColumn Header="Max Amt" Binding="{Binding MaxAmount}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>