<Window x:Class="Rem_ARVU.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		
       Title="Data Abstract for .NET Client Application" Height="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top row: Navigation buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Content="LogOut" Command="{Binding LogoutCommand}" Margin="5"/>
            <Button Content="LogIn" Command="{Binding LogInCommand}" Margin="5"/>
            <!--<Button Content="Product Groups" Command="{Binding SelectProductGroupsCommand}" Margin="5"/>
            <Button Content="Products" Command="{Binding SelectProductsCommand}" Margin="5"/>-->
        </StackPanel>

        <!-- TabControl for ProductGroups and Products -->
        <TabControl Grid.Row="1" Grid.RowSpan="2" SelectedIndex="{Binding SelectedTabIndex}">
            <!-- Product Groups Tab -->
            <TabItem Header="Product Groups">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button Content="Create" Command="{Binding CreateProductGroupCommand}" Margin="5"/>
                        <Button Content="Update" Command="{Binding UpdateProductGroupCommand}" Margin="5"/>
                        <Button Content="Delete" Command="{Binding DeleteProductGroupCommand}" Margin="5"/>
                        <Button Content="Refresh" Command="{Binding RefreshProductGroupsCommand}" Margin="5"/>
                    </StackPanel>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding ProductGroups}" 
                              SelectedItem="{Binding SelectedProductGroup}"
                              AutoGenerateColumns="True" IsReadOnly="True" Margin="5"/>
                </Grid>
            </TabItem>

            <!-- Products Tab -->
            <TabItem Header="Products">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button Content="Create" Command="{Binding CreateProductCommand}" Margin="5"/>
                        <Button Content="Update" Command="{Binding UpdateProductCommand}" Margin="5"/>
                        <Button Content="Delete" Command="{Binding DeleteProductCommand}" Margin="5"/>
                        <Button Content="Refresh" Command="{Binding RefreshProductsCommand}" Margin="5"/>
                    </StackPanel>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" 
                              SelectedItem="{Binding SelectedProduct}"
                              AutoGenerateColumns="True" IsReadOnly="True" Margin="5"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
